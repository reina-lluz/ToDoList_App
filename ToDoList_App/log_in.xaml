<Window x:Class="ToDoList_App.log_in"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList_App"
        mc:Ignorable="d"
        Title="log_in" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/11.png"/>
        </Grid.Background>

        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="220" Height="110">
                <TextBlock FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Height="35"/>


                <TextBox Name="usernameTextBox" Margin="0,5,0,10" SelectionBrush="{x:Null}" Background="{x:Null}" BorderBrush="{x:Null}"/>


                <PasswordBox Name="passwordBox" Margin="0,5,0,20" Background="{x:Null}" BorderBrush="{x:Null}" Height="34"/>


            </StackPanel>
            <Button  HorizontalAlignment="Left" Height="28" Margin="325,172,0,0" VerticalAlignment="Top" Width="62" Background="{x:Null}" Click="SignIn_Click" BorderBrush="#FFFFFBFB"/>
            <Button HorizontalAlignment="Left" Height="28" Margin="401,171,0,0" VerticalAlignment="Top" Width="62" Background="{x:Null}" Click="SignUp_Click" BorderBrush="White" />
        </Grid>
    </Grid>
</Window>
