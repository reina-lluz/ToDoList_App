<Window x:Class="ToDoList_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <!-- Sidebar -->
        <Border x:Name="SidebarPanel" Background="#FFB5A493" Width="195" Height="Auto" HorizontalAlignment="Left">
            <StackPanel>
                <Button Content="🏠 Home" Background="Transparent" Height="40" BorderBrush="{x:Null}" Click="GoToHomePage"/>
                <Button Content="📝 Tasks" Background="Transparent" Height="40" Foreground="Black" BorderBrush="{x:Null}" Click="GoToTasksPage"/>
                <Button Content="👤 Profile" Foreground="Black" Background="Transparent" Height="40" BorderBrush="{x:Null}" Click="GoToProfilePage"/>
                <Button Content="👤 Log Out" Foreground="Black" Background="Transparent" Height="47" BorderBrush="{x:Null}" Click="GoToProfilePage" Margin="0,246,0,0"/>
            </StackPanel>
        </Border>


        <!-- Main Content Area -->
        <Frame x:Name="MainFrame" Background="#FFF1F0E8" Margin="200,0,0,0" Foreground="Black"/>

    </Grid>
</Window>
